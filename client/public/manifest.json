{
  "name": "Palamander Zoo",
  "version": "0.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_title": "Collect Aquatic Buddies!"
  },
  "permissions": ["activeTab", "tabs", "scripting", "webNavigation"],
  "background": {
    "service_worker": "assets/worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "css": ["assets/content.css"],
        "js": ["assets/content-wrapper.js"]
    }
],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "img/*",
        "assets/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}