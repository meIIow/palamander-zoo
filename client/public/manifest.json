{
  "name": "Palamander Zoo",
  "version": "0.1.0",
  "version_name": "0.1.0 beta",
  "manifest_version": 3,
  "action": {
    "default_title": "Collect Aquatic Buddies!"
  },
  "permissions": ["activeTab", "scripting", "storage", "sidePanel"],
  "background": {
    "service_worker": "assets/worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "css": ["assets/content.css"],
        "js": ["assets/content-wrapper.js"]
    }
  ],
  "side_panel": {
    "default_path": "popup.html"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "img/*",
        "assets/content.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}